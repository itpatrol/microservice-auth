{
  "id": "/Auth",
  "type": "object",
  "properties": {
    "accessToken": {
      "type": "string",
      "description": "Access Token. Generated if not provided."
    },
    "ttl": {
      "type": "number",
      "description": "TTl of the token in sec. Default 3600."
    },
    "credential": {
      "type": "object",
      "description": "Credential related to accessToken. Will be populated as requestDetails.credential.",
      "required": true
    },
    "scope": {
      "type": "array",
      "items": {
          "type": "object",
          "properties": {
              "service": {
                "type": "string",
                "required": true
              },
              "methods": {
                "type": "object",
                "properties": {
                  "post": {
                    "type": "boolean",
                    "description": "Allow POST (create) object.",
                    "required": true
                  },
                  "get": {
                    "type": "boolean",
                    "description": "Allow GET (read) object.",
                    "required": true
                  },
                  "put": {
                    "type": "boolean",
                    "description": "Allow PUT (update) object.",
                    "required": true
                  },
                  "delete": {
                    "type": "boolean",
                    "description": "Allow DELETE (delete) object.",
                    "required": true
                  },
                  "search": {
                    "type": "boolean",
                    "description": "Allow SEARCH (search) object.",
                    "required": true
                  }
                }
              }
          },
          "additionalProperties": false
      },
      "minItems": 1
    }
  }
}
